<h2>Rating statistics</h2>

<h2>Best breweries</h2>

<%= render 'list', i: @top_breweries %>

<h2>Best beers</h2>

<%= render 'list', i: @top_beers %>

<h2>Most active users</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>favorite beer</th>
    <th>preferred style</th>
    <th>favorite brewery</th>
    <th>ratings</th>
  </tr>
  </thead>

  <tbody>
  <% @most_active_users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.favorite_beer %></td>
        <td><%= user.favorite_style %></td>
        <td><%= user.favorite_brewery %></td>
        <td><%= user.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Recent ratings</h2>
<ul>
  <% @last_five_ratings.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, user_path(rating.user_id) %></li>
  <% end %>
</ul>

<p>Number of ratings: <%= @ratings.count %></p>

<%= link_to 'New rating', new_rating_path %>