<h1>Editing style</h1>

<%= form_for @style do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.number_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.number_field :description %>
    </div>
    <div class="actions">
      <%=f.submit %>
    </div>
<% end %>
<%= link_to 'Show', @style %>
<%= link_to 'Back', styles_path %>